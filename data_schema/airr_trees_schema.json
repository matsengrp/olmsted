{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://olmsted.io/schemas/airr-trees.json",
  "title": "AIRR Trees Schema",
  "description": "JSON schema for AIRR phylogenetic tree format",
  "type": "object",
  "required": ["ident", "newick", "nodes"],
  "properties": {
    "ident": {
      "type": "string",
      "description": "Tree unique identifier"
    },
    "tree_id": {
      "type": "string",
      "description": "Tree identifier (e.g., algorithm-specific)"
    },
    "newick": {
      "type": "string",
      "description": "Newick format tree string",
      "pattern": "^[\\w\\d\\-\\.\\(\\)\\:;,]+$"
    },
    "downsampling_strategy": {
      "type": "string",
      "description": "Strategy used for downsampling sequences",
      "examples": ["min_adcl", "random", "diversify"]
    },
    "nodes": {
      "type": "object",
      "description": "Map of node identifiers to node data",
      "patternProperties": {
        "^.*$": {
          "$ref": "#/definitions/node"
        }
      },
      "minProperties": 1
    }
  },
  "definitions": {
    "node": {
      "type": "object",
      "required": ["sequence_id", "type", "distance", "length"],
      "properties": {
        "sequence_id": {
          "type": "string",
          "description": "Sequence identifier"
        },
        "parent": {
          "type": ["string", "null"],
          "description": "Parent node identifier (null for root)"
        },
        "type": {
          "type": "string",
          "enum": ["leaf", "internal"],
          "description": "Node type"
        },
        "distance": {
          "type": "number",
          "minimum": 0,
          "description": "Cumulative distance from root"
        },
        "length": {
          "type": "number",
          "minimum": 0,
          "description": "Branch length to parent"
        },
        "multiplicity": {
          "type": "integer",
          "minimum": 0,
          "description": "Sequence multiplicity/abundance"
        },
        "cluster_multiplicity": {
          "type": "integer",
          "minimum": 0,
          "description": "Cluster-level multiplicity"
        },
        "sequence_alignment": {
          "type": "string",
          "pattern": "^[ACGTN-]*$",
          "description": "Nucleotide sequence alignment"
        },
        "sequence_alignment_aa": {
          "type": "string",
          "pattern": "^[ACDEFGHIKLMNPQRSTVWY*-]*$",
          "description": "Amino acid sequence alignment"
        },
        "timepoint_id": {
          "type": "string",
          "description": "Primary timepoint identifier"
        },
        "lbi": {
          "type": "number",
          "description": "Local branching index (phylogenetic metric)"
        },
        "lbr": {
          "type": "number",
          "description": "Local branching ratio (phylogenetic metric)"
        },
        "affinity": {
          "type": ["number", "null"],
          "description": "Binding affinity measurement"
        },
        "timepoint_multiplicities": {
          "type": "array",
          "description": "Abundance data across timepoints",
          "items": {
            "type": "object",
            "required": ["timepoint_id", "multiplicity"],
            "properties": {
              "timepoint_id": {
                "type": "string",
                "description": "Timepoint identifier"
              },
              "multiplicity": {
                "type": "integer",
                "minimum": 0,
                "description": "Multiplicity at this timepoint"
              }
            }
          }
        },
        "cluster_timepoint_multiplicities": {
          "type": "array",
          "description": "Cluster-level temporal abundance data",
          "items": {
            "type": "object",
            "required": ["timepoint_id", "multiplicity"],
            "properties": {
              "timepoint_id": {
                "type": "string",
                "description": "Timepoint identifier"
              },
              "multiplicity": {
                "type": "integer",
                "minimum": 0,
                "description": "Cluster multiplicity at this timepoint"
              }
            }
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "leaf"
              }
            }
          },
          "then": {
            "required": ["multiplicity"],
            "properties": {
              "multiplicity": {
                "minimum": 1
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "parent": {
                "type": "null"
              }
            }
          },
          "then": {
            "properties": {
              "distance": {
                "const": 0
              },
              "length": {
                "const": 0
              }
            }
          }
        }
      ]
    }
  }
}